@model List<biVerifier.Models.CancellationsData>

@{
    ViewData["Title"] = "Dashboard";

}


<div class="custom-container" style="margin-top: 4rem">
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-body">
                    <div class="">
                        <div class="d-flex  align-items-center justify-content-between mb-20">
                            <div>
                                <h5 class="box-title" style="text-transform: uppercase; font-weight: bold;">LIST OF ALL CANCELLATIONS</h5>
                            </div>
                            <div>
                                <button class="btn btn-secondary">PRINT DATTA</button>
                                <button class="btn btn-primary">EXPORT TO EXCEL</button>
                            </div>
                        </div>
                    </div>
                    <div class="table-responsive rounded card-table">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Client</th>
                                    <th>SageAcc </th>
                                    <th>Site </th>
                                    <th>Contact_Person</th>
                                    <th>Account_Manager</th>
                                    <th>Cancellation_Month</th>
                                    <th>Cancellation Received Date</th>
                                    <th>Cancellation_End_Date</th>
                                    <th>Reason</th>
                                    <th>Notes</th>
                                    <th>Reduced_Value_Ex_Vat</th>
                                    <th>TechResponsible</th>
                                    <th>Total_Channels</th>
                                    <th>Platform </th>
                                    <th>Cancel_GSM </th>
                                    <th>Cancel_DNS </th>
                                    <th>Cancel_LPR_Licenses </th>
                                    <th>Cancel_Video_Analytics_Licenses </th>
                                    <th>Cancel_Internet_Connectivity </th>
                                    <th>Status </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var cData in Model)
                                {
                                    <tr class="hover-primary">
                                        <td>@cData?.ID</td>
                                        <td>@cData?.Client</td>
                                        <td>@cData?.SageAcc</td>
                                        <td>@cData?.Site</td>
                                        <td>@cData?.Contact_Person</td>
                                        <td>@cData?.Account_Manager</td>
                                        <td>@cData?.Cancellation_Month</td>
                                        <td>@cData?.Cancellation_Received_Date</td>
                                        <td>@cData?.Cancellation_End_Date</td>
                                        <td>@cData?.Reason</td>
                                        <td>@cData?.Notes</td>
                                        <td>@cData?.Reduced_Value_Ex_Vat</td>
                                        <td>@cData?.TechResponsible</td>
                                        <td>@cData?.Total_Channels</td>
                                        <td>@cData?.Platform</td>
                                        <td>@cData?.Cancel_GSM</td>
                                        <td>@cData?.Cancel_DNS</td>
                                        <td>@cData?.Cancel_LPR_Licenses</td>
                                        <td>@cData?.Cancel_Video_Analytics_Licenses</td>
                                        <td>@cData?.Cancel_Internet_Connectivity</td>
                                        <td>@cData?.Cancel_Billing</td>
                                        <td>@cData?.Status</td>
                                    </tr>
                                
                                }
                              
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>