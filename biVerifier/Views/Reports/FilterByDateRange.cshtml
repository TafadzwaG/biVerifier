@model List<biVerifier.Models.CRMData>


@{
    ViewData["Title"] = "Filter By Date Range";
}




<div class="container" style="margin: 3rem">
    <div class="box">
        <div class="box-body">
            <h5 style="text-transform: uppercase">SALES FILTER BY DATE RANGE</h5>

            <div class="">
                <div class="">
                    <form id="dateRangeForm" method="post" action="/Reports/FilterByDateRange">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-floating">
                                            <input type="month" id="startDate" name="startDate" class="form-control" required>
                                            <label for="startDate">START DATE:</label>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-floating">
                                            <input type="month" id="endDate" name="endDate" class="form-control" required>
                                            <label for="endDate">END DATE:</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 d-flex justify-content-start align-items-center">
                                <!-- Center align the button -->
                                <button type="submit" class="btn btn-dark" style="text-transform: uppercase; font-weight: bold">Apply Filter</button>
                            </div>
                           
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="custom-container" style="margin-top: 4rem">
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-body">
                    <div class="">
                        <div class="d-flex  align-items-center justify-content-between mb-20">
                            <div>
                                <h5 style="text-transform: uppercase ">FILTER RESULT</h5>
                            </div>
                            <div>
                                <button class="btn btn-primary">EXPORT TO EXCEL</button>
                            </div>
                        </div>
                    </div>
                    <div class="table-responsive rounded card-table">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Client Id</th>
                                    <th>Sites</th>
                                    <th>Contact Person</th>
                                    <th>Email Address</th>
                                    <th>Contact Number</th>
                                    <th>Number</th>
                                    <th>Street</th>
                                    <th>Suburb</th>
                                    <th>City</th>
                                    <th>Region</th>
                                    <th>Lead Source</th>
                                    <th>Service Type</th>
                                    <th>Market Type</th>
                                    <th>Category </th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var data in Model)
                                {
                                    <tr class="hover-primary">
                                        <td>@data?.ClientID</td>
                                        <td>@data?.Sites</td>
                                        <td>@data?.Contact_Person</td>
                                        <td>@data?.EmailAdd</td>
                                        <td>@data?.Contact_Num</td>
                                        <td>@data?.Num</td>
                                        <td>@data?.Street</td>
                                        <td>@data?.Suburb</td>
                                        <td>@data?.City</td>
                                        <td>@data?.Region</td>
                                        <td>@data?.Lead_Source</td>
                                        <td>@data?.Service_Type</td>
                                        <td>@data?.Market_Type</td>
                                        <td>@data?.Category</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>