@{
    ViewData["Title"] = "Technical Report By Client Type";
}



@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.16.9/xlsx.full.min.js"></script>
    <script>
        function exportToExcel() {
            // Get the table element
            var table = document.getElementById('dataTable');

            // Convert the table to a worksheet
            var ws = XLSX.utils.table_to_sheet(table);

            // Create a new workbook
            var wb = XLSX.utils.book_new();
            XLSX.utils.book_append_sheet(wb, ws, 'Sheet1');

            XLSX.writeFile(wb, 'TechCancels.xlsx');
        }

        function hideTable() {
            var table = document.getElementById('dataTable');
            table.style.display = 'none';
        }

        // Call the hideTable function when the page loads
        window.onload = hideTable;

    
    </script>
}

<div class="container" style="margin: 3rem">
    <div class="box">
        <div class="box-body">
            <h5 style="text-transform: uppercase">Filter By Platform</h5>

            <div class="">
                <div class="">
                    <form id="clientType" method="post" action="/Reports/TechnicalByClientType">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <select class="form-control" id="clientTypeSelect" name="client">
                                        <option value="">Select Platform</option>
                                        <option value="Milestone/Umbo">Milestone/Umbo</option>
                                        <option value="Dahua">Dahua</option>
                                        <option value="Hikvision">Hikvision</option>
                                        <option value="ACC/Hikvision">ACC/Hikvision</option>
                                        <option value="CMS3">CMS3</option>
                                        <option value="Snipr">Snipr</option>
                                        <option value="NVMS1000">NVMS1000</option>
                                        <option value="Alarm monitoring">Alarm monitoring</option>
                                        <option value="other">Other</option>
                                       
                                    </select>
                                    <label for="clientTypeSelect">FILTER BY CLIENT PLATFORM</label>
                                </div>
                            </div>
                            <div class="col-md-6 d-flex justify-content-start align-items-center">
                                <!-- Center align the button -->
                                <button type="submit" class="btn btn-dark" style="text-transform: uppercase; font-weight: bold">Apply Filter</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



