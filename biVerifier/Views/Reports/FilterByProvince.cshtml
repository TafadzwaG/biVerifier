                                    <th>Contact Number</th>
                                    <th>Number</th>
                                    <th>Street</th>
                                    <th>Suburb</th>
                                    <th>City</th>
                                    <th>Region</th>
                                    <th>Lead Source</th>
                                    <th>Service Type</th>
                                    <th>Market Type</th>
                                    <th>Category </th>
                                    <th>Consultant </th>
                                    <th>Branch </th>
                                    <th>Status </th>
                                    <th>Probability </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var data in Model)
