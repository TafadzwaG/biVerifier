@model List<biVerifier.Models.CRMData>


@{
    ViewData["Title"] = "Filter By Province";
}

<div class="container" style="margin: 3rem">
    <div class="box">
        <div class="box-body">
            <h5 style="text-transform: uppercase">Filter By Province</h5>

            <div class="box">
                <div class="box-body">
                    <form id="provinceForm" method="post" action="/Reports/FilterByProvince">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <select class="form-control" id="provinceSelect" name="region">
                                        <option value="">Select Province</option>
                                        @foreach (var region in Model)
                                        {
                                            <option value="@region.Region">@region.Region</option>
                                        }
                                    </select>
                                    <label for="provinceSelect">SELECT PROVINCE</label>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <button type="submit" class="btn btn-dark">Apply Filter</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

     
  

    
</div>

<div class="custom-container" style="margin-top: 4rem">
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-body">
                    <div class="">
                        <div class="d-flex  align-items-center justify-content-between mb-20">
                            <div>
                                <h5 style="text-transform: uppercase ">FILTER RESULT</h5>
                            </div>
                            <div>
                                <button class="btn btn-primary">EXPORT TO EXCEL</button>
