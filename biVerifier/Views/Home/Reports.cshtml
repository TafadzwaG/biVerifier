@{
    ViewData["Title"] = "Reports Policy";
}

<style>
    ul {
        list-style-type: none;
        padding: 0;
        margin: 0;
    }

    li {
        margin-bottom: 5px;
    }

    .a-link {
            display: block;
            padding: 10px;
            background-color: #f0f0f0;
            text-decoration: none;
            color: #333;
            border-radius: 5px;
            text-transform: uppercase;
        }

            li a:hover {
                background-color: #ddd;
               
               font-weight:bold;
            }
</style>

<div class="rounded10" style="margin-left: 3rem; margin-right: 3rem">
    <div class="box" style="margin-top: 2rem">
        <div class="box-header" >
            <h4 style="color: black">Dynamic Reports</h4>
        </div>
        <div class="box-body">
            <div class="row mt-8 mb-8">
                <div class="col-md-6">
                    <h5 style="text-transform: uppercase" >Sales Report</h5>
                    <ul  class="ul-s mt-5">
                        <li><a class="a-link fw-400"  asp-controller="Reports" asp-action="FilterByDateRange">Filter by date range</a></li>
                        <li><a class="a-link" asp-controller="Reports" asp-action="FilterByDateAndConsultant">Filter by date range and sales person </a></li>
                        <li><a class="a-link"  asp-controller="Reports" asp-action="FilterByProvince">Filter by province</a></li>
                        <li><a class="a-link" asp-controller="Reports" asp-action="FilterByBusinessType">Filter by business type</a></li>
                    </ul>
                </div>
                <div class="col-md-6">
                    <h5 style="text-transform: uppercase">Cancellation Report</h5>
                    <ul class="ul-s mt-5">
                        <li><a class="a-link fw-400" asp-controller="Reports" asp-action="FilterByDateRange">Filter By Date Range</a></li>
                        <li><a class="a-link" href="/Sales/FilterBySalesPerson">Filter Cancellation Reason </a></li>
                    </ul>

                </div>
            </div>
            <div class="row  mt-8">
                <div class="col-md-6 mb-3 mt-3">
                    <h5 style="text-transform: uppercase">Management Reports</h5>
                </div>
                <div class="col-md-6">
                    <h5 style="text-transform: uppercase">Technical Reports</h5>
                    <ul class="ul-s mt-3">
                        <li><a class="a-link fw-400" asp-controller="Reports" asp-action="FilterByDateRange">Filter By Client Type</a></li>
                        <li><a class="a-link" href="/Sales/FilterBySalesPerson">Filter By Technician </a></li>
                        <li><a class="a-link" href="/Sales/FilterBySalesPerson">Filter By Date Range </a></li>
                    </ul>
                </div>
            </div>
        </div>

    </div>
</div>

