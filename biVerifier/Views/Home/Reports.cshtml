@{
    ViewData["Title"] = "Reports Policy";
}

<style>
    ul {
        list-style-type: none;
        padding: 0;
        margin: 0;
    }

    li {
        margin-bottom: 5px;
    }

    .a-link {
            display: block;
            padding: 10px;
            background-color: #f0f0f0;
            text-decoration: none;
            color: #333;
            border-radius: 5px;
            text-transform: uppercase;
        }

            li a:hover {
                background-color: #ddd;
                color: #A61D25 !important;
                font-weight: 500;
            }
</style>

<div class="rounded10" style="margin-left: 3rem; margin-right: 3rem">
    <div class="box" style="margin-top: 2rem">
        <div class="box-header" >
            <h4 style="color: black; text-transform: uppercase">Dynamic Reports</h4>
        </div>
        <div class="box-body">
            <div class="row mt-8 mb-8">
                @if (User.IsInRole("Management") || User.IsInRole("Sales"))
                {
                    <div class="col-md-6">
                        <h5 style="text-transform: uppercase">Sales Report</h5>
                        <ul class="ul-s mt-5">
                            <li><a class="a-link fw-400" asp-controller="Reports" asp-action="FilterByDateRange">Filter by date range</a></li>
                            <li><a class="a-link" asp-controller="Reports" asp-action="FilterByDateAndConsultant">Filter by date range and sales person </a></li>
                            <li><a class="a-link" asp-controller="Reports" asp-action="FilterByProvince">Filter by province</a></li>
                            <li><a class="a-link" asp-controller="Reports" asp-action="FilterByBusinessType">Filter by business type</a></li>
                        </ul>
                    </div>
                }
                
                  @if (User.IsInRole("Management") || User.IsInRole("Sales"))
                {
                    <div class="col-md-6">
                        <h5 style="text-transform: uppercase">Cancellation Report</h5>
                        <ul class="ul-s mt-5">
                            <li><a class="a-link fw-400" asp-controller="Reports" asp-action="CancellationByDateRange">Filter By Date Range</a></li>
                            <li><a class="a-link  fw-400" asp-controller="Reports" asp-action="CancellationFilterByReason">Filter Cancellation Reason </a></li>
                        </ul>

                    </div>
                }
               
            </div>

            <div class="row  mt-8">
                @if(User.IsInRole("Management"))
                    {
                    <div class="col-md-6 mb-3 mt-3">
                        <h5 style="text-transform: uppercase">Management Reports</h5>
                    </div>
                    }
                @if (User.IsInRole("Management") || User.IsInRole("Tech"))
                {
                    <div class="col-md-6">
                        <h5 style="text-transform: uppercase">Technical Reports</h5>
                        <ul class="ul-s mt-3">
                            <li><a class="a-link fw-400" asp-controller="Reports" asp-action="TechnicalByClientType">Filter By Client Type</a></li>
                            <li><a class="a-link fw-400" asp-controller="Reports" asp-action="TechnicalByTechnician">Filter By Technician </a></li>
                            <li><a class="a-link fw-400" asp-controller="Reports" asp-action="TechnicalByDateRange">Filter By Date Range </a></li>
                        </ul>
                    </div>
                }
              
            </div>
        </div>

    </div>
</div>

