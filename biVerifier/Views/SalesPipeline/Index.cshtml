@model List<biVerifier.Models.SalesPipeline>

@{
    ViewData["Title"] = "SALES PIPELINE";

}


@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.16.9/xlsx.full.min.js"></script>
    <script>

         function resetSearchFilter() {
            document.getElementById('searchTerm').value = '';

            window.location.href = '@Url.Action("Index", "SalesPipeline")';
        }


        function exportToExcel() {
            var table = document.getElementById('dataTable');
            var ws = XLSX.utils.table_to_sheet(table);
            var wb = XLSX.utils.book_new();
            XLSX.utils.book_append_sheet(wb, ws, 'Sheet1');
            XLSX.writeFile(wb, 'SalesPipeline.xlsx');
        }


        function hideTable() {
            var table = document.getElementById('dataTable');
            table.style.display = 'none';
        }

        // Optional: Call hideTable if needed
        window.onload = hideTable;
    </script>
}



<div class="custom-container" style="margin-top: 4rem">
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-body">
                    <div class="">
                        <div class="d-flex  align-items-center justify-content-between mb-20">
                            <div>
                                <h4 class="box-title" style="text-transform: uppercase; font-weight: bold;">SALES PIPELINE LIST</h4>
                            </div>
                            <div>
                                <button class="btn btn-primary" onclick="exportToExcel()">
                                    <i class="fa fa-file-excel-o" aria-hidden="true"></i>
                                    EXPORT TO EXCEL
                                </button>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6 mt-4">
                        <form asp-controller="SalesPipeline" asp-action="Search" method="get">
                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" name="searchTerm" id="searchTerm" placeholder="Search by Client" />
                                <label for="floatingSearch">Search by Client</label>

                                
                            </div>
                            <button class="btn btn-primary" type="submit">
                                <i class="fa fa-filter" aria-hidden="true"></i>
                                SEARCH FILTER
                            </button>
                            <button type="button" class="btn btn-outline-secondary" onclick="resetSearchFilter()">
                                <i class="fa fa-refresh" aria-hidden="true"></i> RESET FILTER
                            </button>
                        </form>

                      
                    </div>
                    
                    <div class="table-responsive rounded card-table">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>QuoteNum</th>
                                    <th>Client</th>
                                    <th>Lead_Source</th>
                                    <th>Contact_Person</th>
                                    <th>Email</th>
                                    <th>City</th>
                                    <th>Service</th>
                                    <th>Consultant</th>
                                    <th>Revenue</th>
                                    <th>Markert Type</th>



                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var cData in Model)
                                {
                                    <tr class="hover-primary">
                                        <td>@cData?.QuoteNum</td>
                                        <td>@cData?.Client</td>
                                        <td>@cData?.Lead_Source</td>
                                        <td>@cData?.Contact_Person</td>
                                        <td>@cData?.Email</td>
                                        <td>
                                            <span class="badge bg-primary px-3 py-2">
                                                @cData?.City
                                            </span>
                                        </td>
                                        <td>@cData?.Service</td>
                                        <td>

                                            @if (!string.IsNullOrEmpty(cData?.Consultant))
                                            {
                                                @cData?.Consultant
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary px-3 py-2">N/A</span>
                                            }
                                        </td>
                                        <td>R @cData?.RecurringCost</td>
                                        <td>@cData?.Market</td>
                                        
                                       
                                    </tr>

                                }

                            </tbody>
                        </table>

                        <table id="dataTable" class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>QuoteNum</th>
                                    <th>Client</th>
                                    <th>Lead_Source</th>
                                    <th>Contact_Person</th>
                                    <th>Email</th>
                                    <th>City</th>
                                    <th>Service</th>
                                    <th>Consultant</th>
                                    <th>Once Off Cost</th>
                                    <th>Recurring Cost</th>
                                    <th>Probability</th>
                                    <th>Market</th>
                                    <th>SageQuote</th>


                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var cData in Model)
                                {
                                    <tr class="hover-primary">
                                        <td>@cData?.QuoteNum</td>
                                        <td>@cData?.Client</td>
                                        <td>@cData?.Lead_Source</td>
                                        <td>@cData?.Contact_Person</td>
                                        <td>@cData?.Email</td>
                                        <td>@cData?.City</td>
                                        <td>@cData?.Service</td>
                                        <td>@cData?.Consultant</td>
                                        <td>@cData?.OnceOffCost</td>
                                        <td>@cData?.RecurringCost</td>
                                        <td>@cData?.Probability</td>
                                        <td>@cData?.Market</td>
                                        <td>@cData?.SageQuote</td>
                                    </tr>

                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>