@model List<biVerifier.Models.SalesPipeline>


@{
    ViewData["Title"] = "Filter By Date Range";
}

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.16.9/xlsx.full.min.js"></script>

    <script>
        function exportToExcel() {
            // Get the table element
            var table = document.getElementById('dataTable');
            // Convert the table to a worksheet
            var ws = XLSX.utils.table_to_sheet(table);
            // Create a new workbook
            var wb = XLSX.utils.book_new();
            XLSX.utils.book_append_sheet(wb, ws, 'Sheet1');
            XLSX.writeFile(wb, 'SalesPipelineDateReport.xlsx');
        }

        function hideTable() {
            var table = document.getElementById('dataTable');
            table.style.display = 'none';
        }

        // Call the hideTable function when the page loads
        window.onload = hideTable;

    </script>
    

}

<div class="-container">
    <div class="-container" style="margin: 3rem">
        <div class="box">
            <div class="box-body">
                <h5 style="text-transform: uppercase; font-weight: bold">SALES FILTER BY DATE RANGE</h5>

                <div class="">
                    <div class="">
                        <form id="dateRangeForm" method="post" action="/SalesPipeline/FilterByDateRange">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-floating">
                                                <input type="date" id="startDate" name="startDate" class="form-control" required>
                                                <label for="startDate">START DATE:</label>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-floating">
                                                <input type="date" id="endDate" name="endDate" class="form-control" required>
                                                <label for="endDate">END DATE:</label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 d-flex justify-content-start align-items-center">
                                    <!-- Center align the button -->
                                    <button type="submit" class="btn btn-dark" style="text-transform: uppercase; font-weight: bold">Apply Filter</button>
                                </div>

                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>


        <div class="-container" style="margin-top: 1rem">
            <div class="row">
                <div class="col-md-12">
                    <div class="box">
                        <div class="box-body">
                            <div class="">
                                <div class="d-flex  align-items-center justify-content-between mb-20">
                                    <div>
                                        <h5 style="text-transform: uppercase ">FILTER RESULT</h5>
                                    </div>
                                    <div>
                                        <button class="btn btn-primary" onclick="exportToExcel()">
                                            <i class="fa fa-file-excel-o" aria-hidden="true"></i> EXPORT TO EXCEL
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <div class="table-responsive rounded card-table">
                                <table class="table table-striped table-hover">
                                    <thead>
                                        <tr>
                                            <th>QuoteNum</th>
                                            <th>Client</th>
                                            <th>Lead Source</th>
                                            <th>Contact Person</th>
                                            <th>Email</th>
                                            <th>City</th>
                                            <th>Service</th>
                                            <th>Consultant</th>
                                            <td>Market</td>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item.QuoteNum</td>
                                                <td>@item.Client</td>
                                                <td>@item.Lead_Source</td>
                                                <td>@item.Contact_Person</td>
                                                <td>@item.Email</td>
                                                <td>
                                                    <span class="badge bg-primary px-3 py-2">
                                                        @item.City
                                                    </span>
                                                  </td>
                                                <td>@item.Service</td>
                                                <td>@item.Consultant</td>
                                                <td>@item?.Market</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>


                            <div id="dataTable" class="table-responsive rounded card-table">
                                <table class="table table-striped table-hover">
                                    <thead>
                                        <tr>
                                            <th>QuoteNum</th>
                                            <th>Client</th>
                                            <th>Lead Source</th>
                                            <th>Contact Person</th>
                                            <th>Email</th>
                                            <th>City</th>
                                            <th>Service</th>
                                            <th>Consultant</th>
                                            <td>OnceOffCost</td>
                                            <td>RecurringCost</td>
                                            <td>Probability</td>
                                            <td>Market</td>
                                            <td>SageQuote</td>
                                            
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item?.QuoteNum</td>
                                                <td>@item?.Client</td>
                                                <td>@item?.Lead_Source</td>
                                                <td>@item?.Contact_Person</td>
                                                <td>@item?.Email</td>
                                                <td>
                                                    <span class="badge bg-primary px-3 py-2">
                                                        @item?.City
                                                    </span>
                                                  </td>
                                                <td>@item.Service</td>
                                                <td>@item.Consultant</td>
                                                <td>@item?.OnceOffCost</td>
                                                <td>@item?.RecurringCost</td>
                                                <td>@item?.Probability</td>
                                                <td>@item?.Market</td>
                                                <td>@item?.SageQuote</td>
                                                
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>

</div>

